<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/baseline_menu_24" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="@string/money_manager"
            android:textColor="@color/primary900"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:src="@drawable/avatar" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp"
                android:layout_marginBottom="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_bg"
                    android:orientation="vertical"
                    android:gravity="center|end"
                    android:padding="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main Savings"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_keyboard_arrow_down_24" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="IDR 96,025,578,340"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview Report"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary900"/>

            <RadioGroup
                android:layout_width="fill_parent"
                android:measureWithLargestChild="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/report_rg">
                <RadioButton
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/tab_item_icon"
                    android:padding="10dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button"
                    android:checked="true"
                    android:elevation="4dp"
                    android:layout_margin="4dp"
                    android:text="Weekly"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/weekly_rb"
                    android:textColor="@drawable/text_color_rb"/>
                <RadioButton
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/tab_item_icon"
                    android:padding="10dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button"
                    android:elevation="4dp"
                    android:layout_margin="4dp"
                    android:text="Monthly"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/monthly_rb"
                    android:textColor="@drawable/text_color_rb"/>
                <RadioButton
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/tab_item_icon"
                    android:padding="10dp"
                    android:button="@null"
                    android:background="@drawable/bg_radio_button"
                    android:elevation="4dp"
                    android:layout_margin="4dp"
                    android:text="3 Months"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/months3_rb"
                    android:textColor="@drawable/text_color_rb"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardMaxElevation="4dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/primary900"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10,000,000"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="#7CBF9D"
                            android:letterSpacing=".1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardMaxElevation="4dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expense"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/primary900"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16,789,000"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="@android:color/holo_red_light"
                            android:letterSpacing=".1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Transaction"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary900"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="70dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_transaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/transaction_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add Transaction"
        android:backgroundTint="@color/primary500"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="openNewTransaction"/>

</androidx.constraintlayout.widget.ConstraintLayout>