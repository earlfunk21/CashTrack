<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTransactionActivity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="goBack"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/new_transaction"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary900"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:src="@drawable/avatar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Amount"
            android:textColor="@color/disabled_text"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="IDR"
                android:textColor="@color/primary900"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/disabled_text"
                android:fontFamily="@font/poppins_semibold"
                android:inputType="number"
                android:letterSpacing=".1"
                android:paddingStart="10dp"
                tools:text="3,800,000"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp"
                android:hint="Enter an amount"
                android:textColorHint="@color/disabled_text"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Category"
            android:textColor="@color/disabled_text"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/iv_category_thumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/fitness" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:entries="@array/categories"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Date"
            android:textColor="@color/disabled_text"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/line_btn"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_trans_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableTint="@color/black"
                android:fontFamily="@font/poppins_bold"
                tools:text="Sat, 10 Oct 2020"
                android:textColor="@color/primary900"
                android:textSize="16sp"
                android:onClick="openDateDialog"
                android:hint="Choose a date"
                android:textColorHint="@color/disabled_text"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Note"
            android:textColor="@color/disabled_text"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <EditText
                android:id="@+id/et_note"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:backgroundTint="@color/disabled_text"
                android:drawableTint="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:inputType="textMultiLine"
                tools:text="Air Jordan 1 Retro High OG \n 'Court Purple 2.0'\n Finally, I got this, I'm super happy"
                android:textColor="@color/primary900"
                android:textSize="16sp"
                android:hint="Take a note something..."
                android:textColorHint="@color/disabled_text"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="30dp"
        android:background="@drawable/btn_save_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="addNewTransaction"/>

</androidx.constraintlayout.widget.ConstraintLayout>