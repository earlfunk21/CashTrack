<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CashTrack" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary500</item>
    </style>

    <style name="MyDatePickerStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/primary500</item>
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/primary500</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>
    </style>

    <style name="positive">
        <item name="android:textColor">@color/primary500</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="negative">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>